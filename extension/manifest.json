{
  "manifest_version": 3,
  "name": "Hướng dẫn nghiệp vụ Code PTIT",
  "version": "2.0",
  "description": "Chatbot hỗ trợ giảng viên sử dụng Code PTIT với AI và video hướng dẫn.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://code.ptit.edu.vn/*",
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [ "icon.png" ],
      "matches": [ "https://code.ptit.edu.vn/*" ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://code.ptit.edu.vn/*"
      ],
      "css": [ "style.css" ],
      "js": [ "injector.js" ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Hướng dẫn nghiệp vụ Code PTIT",
    "default_popup": ""
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}